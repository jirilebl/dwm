XF86AudioRaiseVolume
	wpctl set-volume @DEFAULT_AUDIO_SINK@ "5%+" && killall -SIGUSR1 slstatus

XF86AudioLowerVolume
	wpctl set-volume @DEFAULT_AUDIO_SINK@ "5%+" && killall -SIGUSR1 slstatus

XF86AudioMute
	wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && killall -SIGUSR1 slstatus

XF86AudioMicMute
	wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle && killall -SIGUSR1 slstatus

shift + XF86MonBrightnessUp
	brightnessctl set "100%"

shift + XF86MonBrightnessDown
	brightnessctl set 1

XF86MonBrightnessUp
	brightnessctl set "+5%"

XF86MonBrightnessDown
	brightnessctl set "5%-" -n 1
