XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ "+10%" && killall -SIGUSR1 slstatus

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ "-10%" && killall -SIGUSR1 slstatus

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle && killall -SIGUSR1 slstatus

XF86AudioMicMute
	id pactl set-source-mute @DEFAULT_SOURCE@ toggle && killall -SIGUSR1 slstatus

shift + XF86MonBrightnessUp
	brightnessctl set "100%"

shift + XF86MonBrightnessDown
	brightnessctl set 0

XF86MonBrightnessUp
	brightnessctl set "+5%"

XF86MonBrightnessDown
	brightnessctl set "5%-"
